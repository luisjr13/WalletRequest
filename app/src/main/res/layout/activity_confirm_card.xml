<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmCard"
    >
    
   <TextView
       android:id="@+id/Titlepage"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:text="Card Confirmation"
       android:textSize="40dp"
       android:textColor="@color/white"
       android:gravity="center"
       android:padding="20dp"
       android:background="#0000CD"
       >

   </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_card"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/tvnameTitular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvVenci"

            >

        </TextView>


        <TextView
            android:id="@+id/tvnumberCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvnameTitular"
            app:layout_constraintBottom_toTopOf="@id/tvVenci"
            android:text="Number"
            android:textSize="20dp"
            android:textColor="@color/white"
            >

        </TextView>

        <TextView
            android:id="@+id/tvVenci"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vencimento"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvnumberCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvCodseg"
            >

        </TextView>

        <TextView
            android:id="@+id/tvCodseg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Codigo de Segurança"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvVenci"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvColorcard"
            >

        </TextView>

        <TextView
            android:id="@+id/tvColorcard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cor do cartão"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvCodseg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

        </TextView>






    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btPagemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pagina Inicial"
        android:paddingHorizontal="70dp"
        android:textSize="18dp"
        android:backgroundTint="#142995"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card" />


</androidx.constraintlayout.widget.ConstraintLayout>